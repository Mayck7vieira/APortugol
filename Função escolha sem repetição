programa
{
	
	funcao inicio()
	{
		escreva("Escolha uma opção:")
		escreva("1 - Abrir Netflix")
		escreva("\n" + "2 - Abrir Amazon Prime")
		escreva("\n" + "3 - Abrir HBO GO")
		escreva("\n" + "4 - Abrir Sair")
		inteiro menu = 0 
		escreva("\n" + "Sua opção:")
		leia(menu)

		//Utilizando SE para escolhas
		escolha (menu){
		caso 1:
			escreva("Ok!! Abrir Netflix!!")
		pare
		caso 2:
			escreva("Ok!! Abrir Amazon Prime!!")
		pare
		caso 3:
			escreva("Ok!! Abrir HBO GO!!")
		pare
		caso 4:
			escreva("Saindo do menu...")
		pare
		caso contrario:
			escreva("Você deve escolher numeros de 1 a 4,")
		}
		}
}
