//Tabuada com repetição


programa
{
	
	funcao inicio()
	{
	inteiro numero,limite,contador,resultado
	contador = 0
	limite=0
	escreva("Você quer a tabuada de qual número?"+"\n")
	leia(numero)
	escreva("\n" + "Até quanto?"+"\n")
	leia(limite)
	faca{
		resultado = numero*contador
		
		escreva ( "\n" + numero + " x "+ contador + " = " + resultado)
		contador ++
		}
	enquanto (contador<=limite)
	}
}
